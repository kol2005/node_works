extends ../layout

block content
    script.
        $(function(){
            $("button.bbs-list").click(function(){
                document.location.href="/bbs"
            })
            $("button.bbs-write").click(function(){
                $("form").submit()
            })
        })
    section.container-fluid
        form(method="POST")
            .form-group
                input#b_title(name="b_title",placeholder="제목").form-control
            .form-group
                input#b_writer(name="b_writer",placeholder="작성자").form-control
            .form-group
                input#b_text(name="b_text",placeholder="내용").form-control
            .form-group.text-right
                input(type="button",value="리스트").btn.btn-success.bbs-list.m-1
                input(type="button",value="저장").btn.btn-primary.bbs-write.m-1